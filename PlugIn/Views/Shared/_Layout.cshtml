	<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PlugIn</title>
	<style>
		.btn-lime {
			background-color: #32CD32 !important; /* Лаймовый цвет */
			color: white !important; /* Белый цвет текста */
			border: none !important; /* Убираем обводку */
		}

		.btn-lime:hover {
				background-color: #28a745 !important; /* Цвет чуть темнее при наведении */
		}

		.navbar-nav .nav-item {
			margin-left: 10px; /* Отступ слева для каждой кнопки */
		}

		#navbarNav {
			display:flex;
			justify-content:flex-end;
			
		}
	</style>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PlugIn.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		@if (ViewData["HideHeader"] == null || !(bool)ViewData["HideHeader"])
		{
			<header>
				<nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
					<div class="container-fluid">
						<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PlugIn</a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
								aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarNav">
							<ul class="navbar-nav ml-auto">
								<li class="nav-item">
									<a class="nav-link btn btn-primary text-white ml-2" asp-area="" asp-controller="Home" asp-action="UserRegister">Register</a>
								</li>
								<li class="nav-item">
									<a class="nav-link btn btn-lime text-white ml-2" asp-area="" asp-controller="Home" asp-action="UserLogin">LogIn</a>
								</li>
							</ul>

						</div>
					</div>
				</nav>
			</header>
		}
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - PlugIn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
